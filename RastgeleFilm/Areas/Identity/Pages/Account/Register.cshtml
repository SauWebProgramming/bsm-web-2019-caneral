            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <!-- form-group// -->
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    <input asp-for="Input.Email" class="form-control" placeholder="E-posta" type="email">

                </div>               
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input asp-for="Input.Password" class="form-control" placeholder="Şifre" type="password">
                </div>                
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" type="password">
                </div>                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Hesap Oluştur  </button>
                </div> <!-- form-group// -->
                <p class="text-center">Hesabın var mı ? <a href="">Giriş Yap</a> </p>
            </form>
        </article>
    </div> <!-- card.// -->
