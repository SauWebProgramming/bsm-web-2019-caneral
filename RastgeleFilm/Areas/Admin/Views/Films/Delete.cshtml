@model RastgeleFilm.Models.Film

@{
    ViewData["Title"] = "Admin | Film Sil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="span9">
    <div class="content">
        <h1>Kayıt Sil</h1>

        <h3>Bunu silmek istediğinizden emin misiniz?</h3>
        <div>
            <h4>Film</h4>
            <hr />
            <dl class="">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmAd)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmAd)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmTur)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmTur)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmPuan)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmPuan)
                </dd>
                <dt class="col-sm-2">
                    Yabancı Film mi?
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmKategori)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ResimYolu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ResimYolu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VideoYolu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VideoYolu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmAciklama)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmAciklama)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="FilmId" />
                <input type="submit" value="Kayıtı Sil" class="btn btn-danger" /> |
                <a asp-action="Index">Kayıtlara Geri Dön!</a>
            </form>
        </div>
    </div>
</div>
