@model RastgeleFilm.Models.Film

@{
    ViewData["Title"] = "Admin | Film Detay";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="span9">
    <div class="content">
        <h1>Film Detayı</h1>

        <div>
            <h4>Film</h4>
            <hr />
            <dl class="">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmAd)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmAd)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmTur)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmTur)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FilmPuan)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FilmPuan)
                </dd>
                <dt class="col-sm-2">
