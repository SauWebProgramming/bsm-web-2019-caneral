@model RastgeleFilm.Models.Film

@{
    ViewData["Title"] = "Admin | Film Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="span9">
    <div class="content">
        <h1>Film Ekle</h1>

        <h4>Film</h4>
        <hr />

        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="control-group">
                    <label asp-for="FilmAd" class="control-label"></label>
                    <input asp-for="FilmAd" class="form-control span8" placeholder="Buraya bir şeyler yaz..." />
                    <span asp-validation-for="FilmAd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilmTur" class="control-label"></label>
                    <input asp-for="FilmTur" class="form-control span8" placeholder="Buraya bir şeyler yaz..." />
                    <span asp-validation-for="FilmTur" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilmPuan" class="control-label"></label>
                    <input asp-for="FilmPuan" class="form-control span8" placeholder="Buraya bir şeyler yaz..." />
                    <span asp-validation-for="FilmPuan" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="FilmKategori" /> Yabancı Film mi?
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="ResimYolu" class="control-label"></label>
                    <input type="file" asp-for="ResimYolu" class="form-control span8" />
                    <span asp-validation-for="ResimYolu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoYolu" class="control-label"></label>
                    <input type="file" asp-for="VideoYolu" class="form-control span8" />
                    <span asp-validation-for="VideoYolu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilmAciklama" class="control-label"></label>
                    <div class="controls">
                        <textarea style="resize: none;" id="Adres" onkeyup="TextAreaKarakterSayisiDogrula()" asp-for="FilmAciklama" class="form-control span8" rows="5"></textarea>
                    </div>
                    Kalan karakter sayısı : <span id="KalanKarakterSayac">1000</span>
                    <span asp-validation-for="FilmAciklama" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Kayıtlara Geri Dön!</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


