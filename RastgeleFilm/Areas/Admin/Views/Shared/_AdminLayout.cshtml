<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link type="text/css" href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/assets/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/assets/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/assets/images/icons/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
    <link type="text/css" href="~/css/myCss.css" rel="stylesheet">
    <script type="text/javascript">
        //TextArea için karakter sınırı
        function TextAreaKarakterSayisiDogrula() {
            var sonSayi = 1000 - document.getElementById("Adres").value.length;
            if (sonSayi >= 0) {
                document.getElementById("KalanKarakterSayac").innerHTML = sonSayi;
            }
            else {
                document.getElementById("Adres").value = document.getElementById("Adres").value.substring(0, 1000);
                document.getElementById("KalanKarakterSayac").innerHTML = 0;
            }
        }
    </script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" asp-area="admin" asp-controller="dashboard" asp-action="dashboard">RF-Admin</a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    
                    <form class="navbar-search pull-left input-append" action="#">
                        <input type="text" class="span3">
                        <button class="btn" type="button">
                            <i class="icon-search"></i>
                        </button>
                    </form>
                    <ul class="nav pull-right">                        
                        <li class="nav-user dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<img src="~/assets/images/user.png" class="nav-avatar" /><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Profilin</a></li>
                                <li><a href="#">Profilini Düzenle</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Hesap Ayarları</a></li>
                                <li class="divider"></li>
                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link btn btn-link">Çıkış Yap</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar">
                        <ul class="widget widget-menu unstyled">
                            <li class="active">
                                <a asp-area="admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="menu-icon icon-dashboard"></i>Dashboard
                                </a>
                            </li>                            
                        </ul>                        
                        <ul class="widget widget-menu unstyled">                            
                            <li><a asp-area="admin" asp-controller="administration" asp-action="ListUsers"><i class="menu-icon icon-list"></i>Kullanıcılar</a></li>
                            <li><a asp-controller="Administration" asp-action="ListRoles"><i class="menu-icon icon-user"></i>Yetkilendirme</a></li>
                            <li><a asp-area="admin" asp-controller="Films" asp-action="Index"><i class="menu-icon icon-bar-chart"></i>Filmler</a></li>
                        </ul>
                        <!--/.widget-nav-->
                        
                    </div>
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->
                @RenderBody()
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->
    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2019 RF-Admin - Caneral.c </b>Tüm hakları saklıdır.
        </div>
    </div>
    <script src="~/assets/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="~/assets/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/scripts/flot/jquery.flot.js" type="text/javascript"></script>
    <script src="~/assets/scripts/flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="~/assets/scripts/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="~/assets/scripts/common.js" type="text/javascript"></script>

    @RenderSection("Scripts", required: false)

    


</body>
</html>